{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "spread": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "ignoreComments": true
      }
    ]
  }
}
